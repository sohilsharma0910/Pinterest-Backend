<script>
  document.title = "Login Page";
</script>
<%- include('./partials/header.ejs') %> 

<div class="container mx-auto max-w-md my-8 p-6 bg-gray-800 rounded-lg shadow-lg">
  <div class="text-center">
    <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo" class="w-16 mx-auto mt-4" />
    <p class="text-2xl font-bold text-gray-200 mt-6 mb-8">Log in to see more</p>
    <form action="/login" method="post">
      <input type="text" name="username" placeholder="Username" class="w-full p-3 mb-4 border-2 border-gray-600 bg-gray-900 text-gray-200 rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-600" />
      <input type="password" name="password" placeholder="Password" class="w-full p-3 mb-4 border-2 border-gray-600 bg-gray-900 text-gray-200 rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-600" />
      <% if(error.length > 0){ %>
        <span class="text-red-400 font-semibold mb-4 block">
          <%= error %>
        </span>
      <% } %>
      <input type="submit" class="w-full bg-red-700 text-white p-3 rounded-lg font-bold cursor-pointer hover:bg-red-800 transition-colors" value="Login To My Account">
    </form>
    <a href="/forgot" class="block mt-4 text-blue-400 hover:underline">Forgot your password?</a>
    <footer class="mt-6">
      <p class="text-sm text-gray-400 opacity-70">
        By continuing, you agree to Pinterest's
        <b>Terms of Service, Privacy policy.</b>
      </p>
      <hr class="my-4 opacity-30" />
      <p class="text-sm text-gray-400">Not on Pinterest yet? <a href="/register" class="text-blue-400 hover:underline">Register</a></p>
    </footer>
  </div>
</div>

<%- include('./partials/footer.ejs') %>

<script>
  document.title = "Register Page";
</script>
<%- include('./partials/header.ejs') %> 

<!-- ================================================================================================ -->
<% if(error.length > 0){ %>
  <div id="error-alert"
    class="bg-red-800 border border-red-600 text-red-300 px-4 py-3 rounded relative transition-opacity duration-500 ease-in-out opacity-100">
    <strong class="font-bold">Alert: </strong>
    <span class="block sm:inline">
      <%= error %>
    </span>
    <span class="absolute top-0 bottom-0 right-0 px-4 py-3">
      <svg class="fill-current h-6 w-6 text-red-400" role="button" xmlns="http://www.w3.org/2000/svg"
        viewBox="0 0 20 20" onclick="closeAlert()">
        <title>Close</title>
        <path
          d="M14.348 14.849a1 1 0 01-1.414 0L10 11.914l-2.936 2.935a1 1 0 01-1.414-1.414l2.935-2.936-2.935-2.936a1 1 0 011.414-1.414l2.936 2.935 2.936-2.935a1 1 0 011.414 1.414L11.414 10l2.935 2.936a1 1 0 010 1.414z" />
      </svg>
    </span>
  </div>
<% } %>

<!-- ================================================================================================ -->
<div class="container mx-auto max-w-md my-8 p-6 bg-gray-800 rounded-lg shadow-lg">
  <div class="text-center">
    <img src="https://i.pinimg.com/originals/d3/d1/75/d3d175e560ae133f1ed5cd4ec173751a.png" alt="pin logo"
      class="w-16 mx-auto mt-4" />
    <p class="text-2xl font-bold text-gray-200 mt-6 mb-8">Register to see more</p>
    <form action="/register" method="post">
      <input type="text" name="username" placeholder="Username"
        class="w-full p-3 mb-4 border-2 border-gray-600 bg-gray-900 text-gray-200 rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-600" required />
      <input type="text" name="fullname" placeholder="Fullname"
        class="w-full p-3 mb-4 border-2 border-gray-600 bg-gray-900 text-gray-200 rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-600" required />
      <input type="email" name="email" placeholder="Email"
        class="w-full p-3 mb-4 border-2 border-gray-600 bg-gray-900 text-gray-200 rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-600" required />
      <input type="password" name="password" placeholder="Password"
        class="w-full p-3 mb-4 border-2 border-gray-600 bg-gray-900 text-gray-200 rounded-lg focus:outline-none focus:ring-4 focus:ring-blue-600" required />
      <input type="submit"
        class="w-full bg-red-700 text-white p-3 rounded-lg font-bold cursor-pointer hover:bg-red-800 transition-colors"
        value="Register Account">
    </form>
    <a href="/forgot" class="block mt-4 text-blue-400 hover:underline">Forgot your password?</a>
    <p class="text-center font-bold mt-4 mb-2 text-gray-300">OR</p>
    <button
      class="w-full bg-blue-700 text-white p-3 rounded-lg font-bold flex items-center justify-center hover:bg-blue-800 transition-colors mb-2" disabled>
      <i class="fab fa-facebook fa-lg mr-2"></i>
      <a href="#">Continue with Facebook</a>
    </button>
    <button
      class="w-full bg-gray-500 text-gray-100 p-3 rounded-lg font-bold flex items-center justify-center hover:bg-gray-600 transition-colors" disabled>
      <i class="fab fa-google fa-lg mr-2 text-green-400" ></i>
      <a href="#">Continue with Google</a>
    </button>
    <footer class="mt-6">
      <p class="text-sm text-gray-400 opacity-70">
        By continuing, you agree to Pinterest's
        <b>Terms of Service, Privacy policy.</b>
      </p>
      <hr class="my-4 opacity-30" />
      <p class="text-sm text-gray-400">Have an Account? <a href="/login" class="text-blue-400 hover:underline">Login</a></p>
    </footer>
  </div>
</div>

<%- include('./partials/footer.ejs') %>
